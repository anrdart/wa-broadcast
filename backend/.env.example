# Backend Configuration Example
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000

# Cloudflare RealtimeKit (Optional - for multi-client sync)
# Get your key from: https://dash.cloudflare.com/
REALTIMEKIT_API_KEY=rtk_your_api_key_here
REALTIMEKIT_URL=https://api.realtime.cloudflare.com
REALTIMEKIT_CHANNEL=broadcasto-sync

# Environment
NODE_ENV=development

# Feature Flags
ENABLE_REALTIMEKIT=false
ENABLE_AUTO_RECONNECT=true
ENABLE_SCHEDULING=true

# WebSocket Configuration
WS_READ_TIMEOUT=60
WS_WRITE_TIMEOUT=15
CONNECT_RETRY_WAIT=5

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# Logging
LOG_LEVEL=INFO
ENABLE_SQL_LOGGING=false

# WhatsApp Session
FORCE_FRESH_LOGIN=false  # Set to true to force logout and generate new QR code
